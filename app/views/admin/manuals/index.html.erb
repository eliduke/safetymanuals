<% if notice %>
  <p id="notice"><%= notice %></p>
<% end %>

<table class="table">
  <thead class="thead-inverse">
    <tr>
      <th>#</th>
      <th>Photo</th>
      <th>Carrier</th>
      <th>Make</th>
      <th>Model</th>
      <th style="width: 200px">
        <%= link_to "NEW MANUAL", new_admin_manual_path %>
      </th>
    </tr>
  </thead>

  <tbody>
    <% @manuals.each do |manual| %>
      <tr>
        <td><%= manual.id %></td>
        <td><%= image_tag(manual.photo.url(:small), style: "width:100px") %></td>
        <td><%= manual.carrier %></td>
        <td><%= manual.make %></td>
        <td><%= manual.model %></td>
        <td>
          <%= link_to 'Edit', edit_admin_manual_path(manual) %> |
          <%= link_to 'Delete', admin_manual_path(manual), method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
